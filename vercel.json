{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.cjs",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "rewrites": [
    { "source": "/admin/login", "destination": "/index.html" },
    { "source": "/admin", "destination": "/index.html" },
    { "source": "/cardapio", "destination": "/index.html" },
    { "source": "/cart", "destination": "/index.html" },
    { "source": "/checkout", "destination": "/index.html" },
    { "source": "/pedido-confirmado", "destination": "/index.html" },
    { "source": "/admin/edit/:id", "destination": "/index.html" }
  ],
  "routes": [{ "src": "/api/(.*)", "dest": "/api/$1" }]
}
